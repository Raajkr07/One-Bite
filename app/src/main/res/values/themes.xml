<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PizzaParcel" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
<!--        <item name="colorPrimary">@color/my_light_primary</item>-->
        <item name="colorPrimaryVariant">@color/navyBlack</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="Theme.OneBite" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pizza_red</item>
        <item name="colorPrimaryVariant">@color/pizza_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pizza_orange</item>
        <item name="colorSecondaryVariant">@color/pizza_orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.OneBite.NoActionBar" parent="Theme.OneBite">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>


    <style name="Theme.PizzaParcel" parent="Base.Theme.PizzaParcel" />
</resources>