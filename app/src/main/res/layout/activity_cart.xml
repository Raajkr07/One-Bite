<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".cart.CartActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_background"
            app:title="Shopping Cart"
            app:titleTextColor="@color/black"
            app:navigationIcon="@android:drawable/ic_menu_revert"
            app:navigationIconTint="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Empty Cart Message -->
            <LinearLayout
                android:id="@+id/layoutEmptyCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🛒"
                    android:textSize="64sp"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your cart is empty"
                    android:fontFamily="@font/yeon_sung"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add some delicious pizzas to get started!"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContinueShopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue Shopping"
                    android:fontFamily="@font/yeon_sung"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    app:icon="@android:drawable/ic_menu_add"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

            <!-- Cart Content (Visible when cart has items) -->
            <LinearLayout
                android:id="@+id/layoutCartContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Cart Items Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🛍️ Your Items"
                        android:fontFamily="@font/yeon_sung"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear Cart"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:iconSize="16dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="?attr/colorError"
                        android:textColor="?attr/colorError"
                        app:iconTint="?attr/colorError" />

                </LinearLayout>

                <!-- Cart Items RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="16dp"
                    tools:listitem="@layout/item_cart" />

                <!-- Delivery Options Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="?attr/colorSecondary"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🚚 Delivery Options"
                            android:fontFamily="@font/yeon_sung"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <RadioGroup
                            android:id="@+id/radioGroupDelivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioDelivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Home Delivery (+$5.00)"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnSurface"
                                android:checked="true"
                                android:layout_marginBottom="8dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioPickup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Store Pickup (Free)"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnSurface" />

                        </RadioGroup>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Promo Code Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="?attr/colorTertiary"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🎟️ Promo Code"
                            android:fontFamily="@font/yeon_sung"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/textInputLayoutPromo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:hint="Enter promo code"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPromoCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textCapCharacters"
                                    android:maxLines="1" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnApplyPromo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apply"
                                android:textSize="14sp"
                                android:textAllCaps="false"
                                android:paddingHorizontal="20dp"
                                style="@style/Widget.Material3.Button.OutlinedButton" />

                        </LinearLayout>

                        <!-- Applied Promo Display -->
                        <LinearLayout
                            android:id="@+id/layoutAppliedPromo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:visibility="gone"
                            android:background="?attr/colorSecondaryContainer"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvAppliedPromo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="✅ SAVE10 Applied - 10% Off"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorOnSecondaryContainer"
                                android:textStyle="bold" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnRemovePromo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Remove"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="4dp"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:textColor="?attr/colorError" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Bill Summary Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBillSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="?attr/colorPrimaryContainer">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="🧾 Bill Summary"
                            android:fontFamily="@font/yeon_sung"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"
                            android:gravity="center" />

                        <!-- Subtotal -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Subtotal"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnPrimaryContainer" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$25.99"
                                android:fontFamily="@font/yeon_sung"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Delivery Charges -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvDeliveryLabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Delivery Charges"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnPrimaryContainer" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvDeliveryCharges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$5.00"
                                android:fontFamily="@font/yeon_sung"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Discount -->
                        <LinearLayout
                            android:id="@+id/layoutDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Discount"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnPrimaryContainer" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-$2.60"
                                android:fontFamily="@font/yeon_sung"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Tax -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tax (8.5%)"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnPrimaryContainer" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvTax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$2.21"
                                android:fontFamily="@font/yeon_sung"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="?attr/colorOnPrimaryContainer"
                            android:layout_marginVertical="12dp"
                            android:alpha="0.5" />

                        <!-- Total -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Amount"
                                android:fontFamily="@font/yeon_sung"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvTotalAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$30.60"
                                android:fontFamily="@font/yeon_sung"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textColor="?attr/colorOnPrimaryContainer"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Primary Checkout Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnProceedToCheckout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Proceed to Checkout"
                        android:fontFamily="@font/yeon_sung"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:paddingVertical="18dp"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp" />

                    <!-- Secondary Action Buttons Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnContinueShoppingBottom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:text="Continue Shopping"
                            android:fontFamily="@font/yeon_sung"
                            android:textSize="13sp"
                            android:textAllCaps="false"
                            android:paddingVertical="14dp"
                            app:icon="@android:drawable/ic_menu_add"
                            app:iconGravity="textStart"
                            app:iconSize="18dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGoToCheckoutActivity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:text="Checkout Details"
                            android:fontFamily="@font/yeon_sung"
                            android:textSize="13sp"
                            android:textAllCaps="false"
                            android:paddingVertical="14dp"
                            app:icon="@android:drawable/ic_menu_edit"
                            app:iconGravity="textStart"
                            app:iconSize="18dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Quick Actions Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Save for Later -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSaveForLater"
                                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Save for later"
                                app:icon="@android:drawable/ic_menu_save"
                                app:iconSize="24dp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save for Later"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Share Cart -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnShareCart"
                                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Share cart"
                                app:icon="@android:drawable/ic_menu_share"
                                app:iconSize="24dp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share Cart"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- View Bill -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnViewBill"
                                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="View bill"
                                app:icon="@android:drawable/ic_menu_view"
                                app:iconSize="24dp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Bill"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Estimated Delivery Time -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="?attr/colorSecondaryContainer">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⏱️"
                            android:textSize="24sp"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated Delivery Time"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorOnSecondaryContainer"
                                android:textStyle="bold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvEstimatedTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30-45 minutes"
                                android:fontFamily="@font/yeon_sung"
                                android:textAppearance="?attr/textAppearanceBodyLarge"
                                android:textColor="?attr/colorOnSecondaryContainer" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
