<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="?attr/colorPrimary"
    app:strokeWidth="1dp"
    android:backgroundTint="?attr/colorSurfaceContainerLow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Pizza Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCartPizzaImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/cart_pizza_image_desc"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize16dp"
            app:strokeColor="?attr/colorPrimary"
            app:strokeWidth="2dp"
            tools:src="@drawable/pizaa_img" />

        <!-- Pizza Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Pizza Name and Remove Button Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCartPizzaName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/yeon_sung"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    tools:text="Delicious Margherita Pizza" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRemoveItem"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/remove_item"
                    app:icon="@android:drawable/ic_menu_close_clear_cancel"
                    app:iconSize="18dp"
                    app:iconTint="?attr/colorError" />

            </LinearLayout>

            <!-- Pizza Size/Type -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCartPizzaSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Medium • Thin Crust" />

            <!-- Price and Total Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvCartPizzaPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/yeon_sung"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold"
                        tools:text="₹ 149" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvCartItemTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/yeon_sung"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Total: ₹ 298" />

                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?attr/colorSurfaceVariant"
                    android:padding="4dp"
                    app:cardCornerRadius="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecrease"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="@string/decrease_quantity"
                        app:icon="@android:drawable/ic_delete"
                        app:iconSize="16dp"
                        app:cornerRadius="8dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:fontFamily="@font/yeon_sung"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncrease"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:contentDescription="@string/increase_quantity"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconSize="16dp"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Special Instructions or Customizations -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCartPizzaCustomizations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="italic"
                android:visibility="gone"
                tools:text="Extra cheese, No olives"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>
